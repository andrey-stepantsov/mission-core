#!/bin/bash
# USAGE: logs [lines]
TARGET=".aider.coder.history.md"
LINES=${1:-50}
if [ ! -f "$TARGET" ]; then
    echo "‚ö†Ô∏è  System: No Coder history found yet ($TARGET)."
    exit 0
fi
echo "=== üëÅÔ∏è  CODER CHAT LOG (Last $LINES lines) ==="
tail -n "$LINES" "$TARGET"
echo "=============================================="
