#!/usr/bin/env python3
import time
import os
import sys

# Add lib to path
current_dir = os.path.dirname(os.path.abspath(__file__))
lib_dir = os.path.join(os.path.dirname(current_dir), "lib")
sys.path.insert(0, lib_dir)

import radio

LOG_FILE = radio.DEFAULT_LOG

# ANSI Colors
BLUE = "\033[94m"
GREEN = "\033[92m"
RESET = "\033[0m"

def follow(thefile):
    thefile.seek(0, 2)
    while True:
        line = thefile.readline()
        if not line:
            time.sleep(0.1)
            continue
        yield line

print(f"{BLUE}ðŸ“¡ Tuning Radio: {LOG_FILE}{RESET}")

try:
    if not os.path.exists(LOG_FILE):
        print("Waiting for log creation...")
        while not os.path.exists(LOG_FILE):
            time.sleep(1)

    logfile = open(LOG_FILE, "r")
    loglines = follow(logfile)
    for line in loglines:
        sys.stdout.write(line)
except KeyboardInterrupt:
    print(f"\n{GREEN}Radio Off.{RESET}")
