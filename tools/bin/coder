#!/bin/bash
DIR=$(dirname "$(readlink -f "$0")")
LAUNCHER="$DIR/../lib/launch_container.sh"
RULES="$DIR/../../prompts/coder_rules.md"

echo "ðŸ’» Coder Persona (Dockerized)"
