{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Projector Build",
            "type": "shell",
            "command": "${workspaceFolder}/.mission/tools/bin/projector",
            "args": [
                "build",
                "--sync",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Projector Pull",
            "type": "shell",
            "command": "${workspaceFolder}/.mission/tools/bin/projector",
            "args": [
                "pull",
                "${input:remotePath}"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Projector Push (Sync)",
            "type": "shell",
            "command": "${workspaceFolder}/.mission/tools/bin/projector",
            "args": [
                "push",
                "${file}"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Projector Retract",
            "type": "shell",
            "command": "${workspaceFolder}/.mission/tools/bin/projector",
            "args": [
                "retract",
                "${file}"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Projector Log",
            "type": "shell",
            "command": "${workspaceFolder}/.mission/tools/bin/projector",
            "args": [
                "log",
                "-n",
                "50"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Projector Listen (Radio)",
            "type": "shell",
            "command": "${workspaceFolder}/.mission/tools/bin/projector",
            "args": [
                "listen"
            ],
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Projector Live (Synapse)",
            "type": "shell",
            "command": "${workspaceFolder}/.mission/tools/bin/projector",
            "args": [
                "live"
            ],
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Projector Context (AI)",
            "type": "shell",
            "command": "${workspaceFolder}/.mission/tools/bin/projector",
            "args": [
                "context",
                "${file}"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        }
    ],
    "inputs": [
        {
            "id": "remotePath",
            "description": "Remote path to pull (from repo root)",
            "default": "",
            "type": "promptString"
        }
    ]
}